<Window x:Class="Demoe.UpdateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demoe"
        mc:Ignorable="d"
        Title="UpdateProductWindow" Height="575" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Название продукта:"/>
            <TextBox x:Name="NameProductTextBox"/>

            <Label Content="Описание:"/>
            <TextBox x:Name="DescriptionTextBox"/>

            <Label Content="Цена:"/>
            <TextBox x:Name="PriceTextBox"/>

            <Label Content="Размер коробки:"/>
            <TextBox x:Name="SizeBoxTextBox"/>

            <Label Content="Вес с коробкой:"/>
            <TextBox x:Name="WeightWithBoxTextBox"/>

            <Label Content="Вес без коробки:"/>
            <TextBox x:Name="WeightWithoutBoxTextBox"/>

            <Label Content="Номер стандарта:"/>
            <TextBox x:Name="NumberStandartTextBox"/>

            <Label Content="Себестоимость:"/>
            <TextBox x:Name="CostTextBox"/>

            <Label Content="Номер цеха:"/>
            <TextBox x:Name="NumberWorkshopTextBox"/>

            <Label Content="Количество работников:"/>
            <TextBox x:Name="CountEmployeesTextBox"/>

            <Label Content="ID материала:"/>
            <TextBox x:Name="IdMaterialsTextBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
